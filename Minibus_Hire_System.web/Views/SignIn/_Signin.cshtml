@model Minibus_Hire_System.web.Models.SignIn.SignInViewModel

<h2>Welcome back,</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-3"></div>
        <div class="col-sm-12 col-md-6">
            <span class="label-span">Email</span>
            <input asp-for="signin_Email" />
            <span asp-validation-for="signin_Email"></span>
        </div>
        <div class="col-sm-12 col-md-3"></div>
        <div class="col-sm-12 col-md-3"></div>
        <div class="col-sm-12 col-md-6">
            <span class="label-span">Password</span>
            <input asp-for="signin_Password" />
            <span asp-validation-for="signin_Password"></span>
        </div>
        <div class="col-sm-12 col-md-3"></div>
    </div>
    <br />
    <div class="row">
        <button type="button" onclick="SigninFunction()" class="submit">Sign In</button>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="signInValidation" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body text-center">
                <p>Invalid email address or password.</p>
            </div>
        </div>
    </div>
</div>