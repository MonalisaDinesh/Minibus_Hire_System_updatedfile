        <a class="btn btn-light btn-xl" href="#"> Download Brochures!</a>
    </div>
</section>
<!-- Contact-->
<section class="page-section" id="contact">
    <div class="container">
        <div class="row justify-content-center">            <div class="col-lg-8 text-center">
                <h2 class="mt-0">Let's Get In Touch!</h2>
                <hr class="divider my-4" />
                <p class="text-muted mb-5">Ready to plan next trip? Give us a call or send us an email and we will get back to you as soon as possible!</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header heading-footer"><h3 class="contact-header text-white">Contact <span class="text-white-50">us</span></h3></div>
                    <div class="card-body">
                        <form asp-action="Contact" asp-controller="Home">
                            <div class="row">
                                <div class="col-12 col-lg-4">
                                    <div class="input-group input-group-icon">
                                        <input asp-for="FirstName" placeholder="First Name" />
                                        <div class="input-icon"><i class="fa fa-user text-primary"></i></div>
                                        <span asp-validation-for="FirstName"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-4">
                                    <div class="input-group input-group-icon">
                                        <input asp-for="LastName" placeholder="Last Name" />
                                        <div class="input-icon"><i class="fa fa-user"></i></div>
                                        <span asp-validation-for="LastName"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-4">
                                    <div class="input-group input-group-icon">
                                        <input asp-for="Email" placeholder="Email" />
                                        <div class="input-icon"><i class="fa fa-envelope"></i></div>
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3"></div>
                                <div class="col-12 col-lg-6">
                                    <div class="form-group">
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-comment text-info"></i></div>
                                            </div>
                                            <textarea asp-for="Message" class="form-control" placeholder="Write you query here..!" required></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 text-center">
                                    <button type="submit" class="btn btn-custom draw-border">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card shadow" style="margin-top:15px;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-4 ml-auto text-center mb-5 mb-lg-0">
                                <i class="fas fa-phone fa-3x mb-3 text-muted"></i>
                                <div>0116-000-0000</div>
                            </div>
                            <div class="col-lg-4 mr-auto text-center">
                                <i class="fas fa-envelope fa-3x mb-3 text-muted"></i>
                                <!-- Make sure to change the email address in BOTH the anchor text and the link target below!-->
                                <a class="d-block" href="mailto:contact@minibushire.com">contact@minibushire.com</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


